{
  "compilerOptions": {  
    "module": "commonjs",                          
    "target": "esnext",         
    "outDir": "dist",         
    "rootDirs": ["src"],
    "declaration": true,
    "strict": true,           
    "noUnusedLocals": true,   
    "noImplicitReturns": true, 
    "stripInternal": true,    
    "types": [],
    "esModuleInterop": true,  
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  }
}
